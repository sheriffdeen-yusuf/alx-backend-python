[flake8]
# Line length should match black
max-line-length = 88
# Maximum complexity
max-complexity = 10
# Ignore these error codes
ignore = 
    # Black conflicts
    E203,
    # Line break before binary operator (black style)
    W503,
    # Django migration files
    .migrations,
    # Django settings files
    settings.py,
    # Cache and build directories
    .cache,
    .venv,
    build,
    dist,
    __pycache__,
    *.egg-info
# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .cache,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    settings.py,
    local_settings.py,
    node_modules,
    static,
    media
# Use black as the reference for line length
format = default
# Show source of errors
show-source = True
# Statistics
statistics = True
# Django plugin
django-settings-module = messaging_app.settings